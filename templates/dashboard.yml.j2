apiVersion: 1

providers:
  - name: 'Cosmos Validator'
    orgId: 1
    folder: ''
    type: file
    disableDeletion: false
    editable: true
    options:
      path: /var/lib/grafana/dashboards

dashboards:
  - name: 'Cosmos Validator Dashboard'
    uid: cosmos-validator
    jsonData:
      url: 'https://grafana.com/api/dashboards/16580/revisions/1/download'
    type: json
    disableDeletion: false
    editable: true
    options:
      path: /var/lib/grafana/dashboards/cosmos-validator.json

  - name: 'Validators Dashboard'
    uid: cosmos-validators
    jsonData:
      url: 'https://grafana.com/api/dashboards/validators'
    type: json
    disableDeletion: false
    editable: true
    options:
      path: /var/lib/grafana/dashboards/validators.json

  - name: 'Wallet Dashboard'
    uid: cosmos-wallet
    jsonData:
      url: 'https://grafana.com/api/dashboards/wallet'
    type: json
    disableDeletion: false
    editable: true
    options:
      path: /var/lib/grafana/dashboards/wallet.json