global:
  scrape_interval: 15s

scrape_configs:
  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:9090']

  - job_name: 'node_exporter'
    static_configs:
      - targets: ['localhost:9100']

  - job_name: 'cosmos_exporter'
    static_configs:
      - targets: ['localhost:9300']

  - job_name: 'story_consensus'
    static_configs:
      - targets: ['localhost:26660']

  - job_name: 'story_geth'
    static_configs:
      - targets: ['localhost:6060']    